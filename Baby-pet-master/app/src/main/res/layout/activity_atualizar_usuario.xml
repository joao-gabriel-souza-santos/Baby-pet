<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.atualizar.AtualizarUsuario\">


  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/imageRedonda"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="64dp"
      android:src="@drawable/imagem_redonda"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/txt_nome"
      android:layout_width="224dp"
      android:layout_height="36dp"
      android:layout_marginTop="35dp"
      android:background="@drawable/style_edit_text_area"
      android:ems="10"
      android:hint="Nome"
      android:inputType="textPersonName"
      android:paddingStart="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageRedonda" />

  <com.santalu.maskedittext.MaskEditText
      android:id="@+id/txtCpf"
      android:layout_width="224dp"
      android:layout_height="36dp"
      android:layout_marginTop="35dp"
      android:background="@drawable/style_edit_text_area"
      android:ems="10"
      android:hint="Cpf"
      android:inputType="textPersonName"
      android:paddingStart="15dp"
      app:met_mask="###.###.###-##"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_nome" />

  <EditText
      android:id="@+id/txtEmail"
      android:layout_width="224dp"
      android:layout_height="36dp"
      android:layout_marginTop="35dp"
      android:ems="10"
      android:inputType="textEmailAddress"
      android:hint="Email"
      android:background="@drawable/style_edit_text_area"
      android:paddingStart="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtCpf" />


  <Button
      android:id="@+id/button_salvar_usuario"
      android:layout_width="170dp"
      android:layout_height="51dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/style_btn_login_cadastro"
      android:text="Salvar"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

  <ImageButton
      android:id="@+id/button_voltar_cadastro"
      android:layout_width="33dp"
      android:layout_height="32dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/image_button_circular"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.093"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_voltar" />

  </androidx.constraintlayout.widget.ConstraintLayout>